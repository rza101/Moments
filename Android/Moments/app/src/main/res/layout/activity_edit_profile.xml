<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.activities.editprofile.EditProfileActivity"
    android:paddingHorizontal="20dp">

    <include
        android:id="@+id/toolbar"
        layout="@layout/toolbar_children" />

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/edit_profile_mcv_image"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginHorizontal="30dp"
        android:layout_marginTop="30dp"
        android:clipChildren="false"
        app:cardCornerRadius="15dp"
        app:cardElevation="0dp"
        app:layout_constraintHeight_percent="0.4"
        app:layout_constraintTop_toBottomOf="@id/toolbar"
        app:strokeColor="@color/grey"
        app:strokeWidth="2dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/edit_profile_iv_preview"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="fitCenter" />

            <ImageView
                android:id="@+id/edit_profile_iv_camera_info"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/ic_camera_alt_24"
                app:layout_constraintBottom_toTopOf="@id/edit_profile_tv_text_info"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_chainStyle="packed"
                app:tint="@color/grey" />

            <TextView
                android:id="@+id/edit_profile_tv_text_info"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:fontFamily="@font/inter_semibold"
                android:text="@string/add_an_image_first_from_camera_or_gallery"
                android:textAlignment="center"
                android:textSize="16sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/edit_profile_iv_camera_info"
                app:layout_constraintWidth_percent="0.7" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </com.google.android.material.card.MaterialCardView>

    <ImageButton
        android:id="@+id/edit_profile_ib_camera"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:backgroundTint="@color/blue"
        android:src="@drawable/ic_camera_alt_24"
        app:layout_constraintEnd_toStartOf="@id/edit_profile_ib_gallery"
        app:layout_constraintStart_toStartOf="@id/edit_profile_mcv_image"
        app:layout_constraintTop_toBottomOf="@id/edit_profile_mcv_image" />

    <ImageButton
        android:id="@+id/edit_profile_ib_gallery"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/blue"
        android:src="@drawable/ic_image_24"
        app:layout_constraintEnd_toStartOf="@id/edit_profile_ib_clear"
        app:layout_constraintStart_toEndOf="@id/edit_profile_ib_camera"
        app:layout_constraintTop_toTopOf="@id/edit_profile_ib_camera" />

    <ImageButton
        android:id="@+id/edit_profile_ib_clear"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/blue"
        android:src="@drawable/ic_close_24"
        app:layout_constraintEnd_toEndOf="@id/edit_profile_mcv_image"
        app:layout_constraintStart_toEndOf="@id/edit_profile_ib_gallery"
        app:layout_constraintTop_toTopOf="@id/edit_profile_ib_camera" />


    <TextView
        android:id="@+id/edit_profile_tv_full_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Full Name"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/edit_profile_ib_camera"/>

    <EditText
        android:id="@+id/edit_profile_et_full_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        android:inputType="text"
        app:layout_constraintTop_toBottomOf="@+id/edit_profile_tv_full_name"/>

    <TextView
        android:id="@+id/edit_profile_tv_username"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="username"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/edit_profile_et_full_name"/>

    <EditText
        android:id="@+id/edit_profile_et_username"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="text"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/edit_profile_tv_username"/>

    <Button
        android:id="@+id/edit_profile_btn_edit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:backgroundTint="@color/blue"
        android:paddingVertical="15dp"
        android:text="Edit"
        android:textAllCaps="false"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/edit_profile_et_username" />
</androidx.constraintlayout.widget.ConstraintLayout>