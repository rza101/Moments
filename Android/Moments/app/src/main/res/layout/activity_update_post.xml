<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.activities.updatepost.UpdatePostActivity">

    <ImageView
        android:id="@+id/update_post_iv_back"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_margin="20dp"
        android:src="@drawable/ic_arrow_back_24"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:tint="@color/grey" />

    <TextView
        android:id="@+id/update_post_tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:fontFamily="@font/inter_semibold"
        android:text="@string/update_post"
        android:textColor="@color/black"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="@id/update_post_iv_back"
        app:layout_constraintStart_toEndOf="@id/update_post_iv_back"
        app:layout_constraintTop_toTopOf="@id/update_post_iv_back" />

    <View
        android:id="@+id/update_post_view_line"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_marginTop="20dp"
        android:alpha="0.5"
        android:background="@color/grey"
        app:layout_constraintTop_toBottomOf="@id/update_post_iv_back" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/update_post_view_line">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/update_post_iv_preview"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginHorizontal="20dp"
                android:layout_marginTop="10dp"
                android:scaleType="fitCenter"
                app:layout_constraintBottom_toTopOf="@id/update_post_mcv_caption"
                app:layout_constraintHeight_percent="0.5"
                app:layout_constraintTop_toTopOf="parent"
                tools:src="@drawable/ic_camera_alt_24" />

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/update_post_mcv_caption"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_marginHorizontal="20dp"
                android:layout_marginVertical="10dp"
                android:clipChildren="false"
                app:cardCornerRadius="15dp"
                app:cardElevation="0dp"
                app:layout_constraintBottom_toTopOf="@id/update_post_btn_post"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHeight_percent="0.3"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/update_post_iv_preview"
                app:strokeColor="@color/grey"
                app:strokeWidth="2dp">

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="10dp"
                    android:layout_marginBottom="20dp"
                    android:background="@null"
                    android:fontFamily="@font/inter_regular"
                    android:gravity="top"
                    android:hint="@string/write_some_captions"
                    android:inputType="textMultiLine|textNoSuggestions"
                    android:padding="0dp"
                    android:scrollHorizontally="false"
                    android:textColor="@color/black" />

            </com.google.android.material.card.MaterialCardView>

            <Button
                android:id="@+id/update_post_btn_post"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:backgroundTint="@color/blue"
                android:fontFamily="@font/inter_bold"
                android:text="@string/update"
                android:textSize="16sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="@id/update_post_mcv_caption"
                app:layout_constraintStart_toStartOf="@id/update_post_mcv_caption" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>