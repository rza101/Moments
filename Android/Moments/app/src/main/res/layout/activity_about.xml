<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.activities.about.AboutActivity">

    <TextView
        android:id="@+id/about_tv_identity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Company"
        android:textSize="10sp"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:id="@+id/about_tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/inter_semibold"
        android:text="About"
        android:textSize="22sp"
        app:layout_constraintTop_toBottomOf="@+id/about_tv_identity"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/about_iv_menu"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:src="@drawable/ic_menu_24"
        app:layout_constraintBottom_toBottomOf="@id/about_view_line"
        android:layout_marginEnd="20dp"
        />

    <View
        android:id="@+id/about_view_line"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_marginTop="10dp"
        android:alpha="0.5"
        android:background="@color/grey"
        app:layout_constraintTop_toBottomOf="@id/about_tv_title" />

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/about_civ_rheza"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_margin="20dp"
        tools:src="@drawable/ph_user"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/about_view_line"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Rheza Rijaya"
        app:layout_constraintStart_toEndOf="@id/about_civ_rheza"
        app:layout_constraintTop_toTopOf="@id/about_civ_rheza"
        app:layout_constraintBottom_toBottomOf="@id/about_civ_rheza"
        android:layout_marginStart="20dp"
        android:textSize="16sp"
        android:fontFamily="@font/inter_semibold"
        />

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/about_civ_dika"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_margin="20dp"
        tools:src="@drawable/ph_user"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/about_civ_rheza"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Dika Saputra"
        app:layout_constraintStart_toEndOf="@id/about_civ_dika"
        app:layout_constraintTop_toTopOf="@id/about_civ_dika"
        app:layout_constraintBottom_toBottomOf="@id/about_civ_dika"
        android:layout_marginStart="20dp"
        android:textSize="16sp"
        android:fontFamily="@font/inter_semibold"
        />

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/about_civ_fandy"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_margin="20dp"
        tools:src="@drawable/ph_user"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/about_civ_dika"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Fandy"
        app:layout_constraintStart_toEndOf="@id/about_civ_fandy"
        app:layout_constraintTop_toTopOf="@id/about_civ_fandy"
        app:layout_constraintBottom_toBottomOf="@id/about_civ_fandy"
        android:layout_marginStart="20dp"
        android:textSize="16sp"
        android:fontFamily="@font/inter_semibold"
        />

</androidx.constraintlayout.widget.ConstraintLayout>