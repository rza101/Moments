<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10dp">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/item_user_civ_dp"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:src="@drawable/ic_person_grey_24"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/item_user_tv_username"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:fontFamily="@font/inter_bold"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@id/item_user_tv_fullname"
        app:layout_constraintStart_toEndOf="@id/item_user_civ_dp"
        app:layout_constraintTop_toTopOf="@id/item_user_civ_dp"
        tools:text="User Name" />

    <TextView
        android:id="@+id/item_user_tv_fullname"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:fontFamily="@font/inter_medium"
        android:textSize="15sp"
        app:layout_constraintBottom_toBottomOf="@id/item_user_civ_dp"
        app:layout_constraintStart_toStartOf="@id/item_user_tv_username"
        app:layout_constraintTop_toBottomOf="@id/item_user_tv_username"
        tools:text="Full Name" />

</androidx.constraintlayout.widget.ConstraintLayout>