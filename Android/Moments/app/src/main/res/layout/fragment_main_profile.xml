<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.fragments.mainprofile.MainProfileFragment">

    <!-- TODO: Update blank fragment layout -->
    <include
        android:id="@+id/toolbar"
        layout="@layout/toolbar_main" />

    <fragment
        android:id="@+id/profile_fragment"
        android:name="androidx.navigation.fragment.NavHostFragment"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:defaultNavHost="true"
        app:layout_constraintBottom_toTopOf="@id/main_bnv"
        app:layout_constraintTop_toBottomOf="@id/item_tv_followers"
        app:layout_constraintVertical_bias="0.0"
        android:layout_marginTop="16dp"
        app:navGraph="@navigation/navigation_main"
        tools:layout_editor_absoluteX="0dp" />

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/main_bnv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:menu="@menu/menu_main_nav" />

    <ImageView
        android:id="@+id/main_iv_menu"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_margin="20dp"
        android:src="@drawable/ic_menu_24"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/item_civ_main_profile"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@+id/toolbar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:src="@drawable/ph_user"
        />

    <TextView
        android:id="@+id/item_tv_fullname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/inter_semibold"
        app:layout_constraintTop_toBottomOf="@+id/item_civ_main_profile"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:text="Rheza Rijaya's"
        android:textSize="20sp"
        android:layout_marginTop="8dp"
        android:textColor="@color/black"
        />

    <TextView
        android:id="@+id/item_tv_username"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/inter_semibold"
        app:layout_constraintTop_toBottomOf="@+id/item_tv_fullname"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:text="\@RhezaaGanteng"
        android:textSize="12sp"
        android:layout_marginTop="8dp"
        android:textColor="@color/black"
        />

    <TextView
        android:id="@+id/item_tv_followers"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/inter_semibold"
        app:layout_constraintTop_toBottomOf="@+id/item_tv_username"
        app:layout_constraintEnd_toStartOf="@+id/item_tv_following"
        app:layout_constraintStart_toStartOf="@+id/item_tv_username"
        android:text="100 Followers"
        android:textSize="12sp"
        android:layout_marginTop="8dp"
        android:textColor="#737373"
        android:layout_marginRight="4dp"
        />
    <TextView
        android:id="@+id/item_tv_following"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/inter_semibold"
        app:layout_constraintTop_toBottomOf="@+id/item_tv_username"
        app:layout_constraintStart_toEndOf="@+id/item_tv_followers"
        app:layout_constraintEnd_toEndOf="@+id/item_tv_username"
        android:text="100 Following"
        android:textSize="12sp"
        android:layout_marginTop="8dp"
        android:textColor="#737373"
        android:layout_marginLeft="4dp"
        />





</androidx.constraintlayout.widget.ConstraintLayout>