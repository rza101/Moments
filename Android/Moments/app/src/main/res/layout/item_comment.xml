<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10dp">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/item_comment_civ_dp"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/ic_person_grey_24"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/item_comment_tv_username"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:fontFamily="@font/inter_bold"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/item_comment_civ_dp"
        app:layout_constraintTop_toTopOf="@id/item_comment_civ_dp"
        tools:text="\@r.za.101" />

    <TextView
        android:id="@+id/item_comment_tv_comment"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:fontFamily="@font/inter_medium"
        android:textSize="15sp"
        app:layout_constraintEnd_toEndOf="@id/item_comment_tv_username"
        app:layout_constraintStart_toStartOf="@id/item_comment_tv_username"
        app:layout_constraintTop_toBottomOf="@id/item_comment_tv_username"
        tools:text="Lorem ipsum dolor sit amet, consectetur adipiscing elit. Nunc mi ligula, consectetur vel feugiat quis, pharetra in tortor. Morbi et dictum purus. Nam laoreet erat vel porttitor placerat." />

</androidx.constraintlayout.widget.ConstraintLayout>